# FastAPI
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# Database
DATABASE_URL=postgresql://user:password@localhost/forensic_db

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./evidence_storage
MAX_FILE_SIZE=524288000  # 500MB

# S3 Configuration (optional)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=forensic-evidence
S3_REGION=us-east-1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
ALLOWED_URL_DOMAINS=twitter.com,x.com,youtube.com,youtu.be
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
CHAIN_OF_CUSTODY_LOG_PATH=./chain_of_custody.log